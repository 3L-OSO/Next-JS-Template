{
  "name": "demo-todo-app",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "next build",
    "ci": "tsx ./scripts/ci.ts",
    "ci:docker": "docker compose --project-directory . --env-file .env -f docker/docker-compose.ci.yml up --build --abort-on-container-exit --exit-code-from todo-app-test",
    "dev": "concurrently -c \"cyan,magenta\" -n \"INFRA,NEXT\"  \"docker-compose --project-directory . --env-file .env -f docker/docker-compose.infra.dev.yml up\" \"next dev\"",
    "deploy": "docker compose --project-directory . --env-file .env -f docker/Dockerfile.app.prod up --build -d",
    "deploy:script": "tsx ./scripts/cd.ts",
    "drizzle:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "drizzle:migrate": "drizzle-kit migrate --config ./drizzle.config.ts",
    "env:dev:start": "docker compose --project-directory . --env-file .env -f docker-compose.infra.dev.yml up -d",
    "env:dev:stop": "docker compose --project-directory . --env-file .env -f docker-compose.infra.dev.yml down",
    "env:prod:start": "docker compose --project-directory . --env-file .env -f docker-compose.infra.prod.yml up -d",
    "env:prod:stop": "docker compose --project-directory . --env-file .env -f docker-compose.infra.prod.yml down",
    "format": "prettier --write .",
    "lint": "eslint",
    "start": "next start",
    "test": "vitest",
    "e2e:headed": "tsx scripts/e2e.ts --headed",
    "e2e:headless": "tsx scripts/e2e.ts",
    "e2e:report": "tsx scripts/e2e.ts --report",
    "tsx": "tsx"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "lucide-react": "^0.548.0",
    "next": "16.0.1",
    "pg": "^8.16.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@playwright/test": "^1.56.1",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20",
    "@types/pg": "^8.15.6",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "babel-plugin-react-compiler": "1.0.0",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9",
    "eslint-config-next": "16.0.1",
    "eslint-config-prettier": "^10.1.8",
    "tailwindcss": "^4",
    "tsx": "^4.20.6",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5",
    "vitest": "^4.0.4"
  }
}
